<?xml version="1.0" encoding="utf-8"?>
<!-- Tela de splash/desbloqueio - exibe logo e opção de autenticação biométrica ou PIN -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    android:padding="32dp">

    <!-- Logo/ícone de impressão digital centralizado -->
    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/ic_fingerprint"
        android:tint="@android:color/white"
        app:layout_constraintBottom_toTopOf="@id/tv_app_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <!-- Título do aplicativo -->
    <TextView
        android:id="@+id/tv_app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/app_title"
        android:textColor="@android:color/white"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/tv_unlock_message"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_logo" />

    <!-- Mensagem orientando o usuário a desbloquear o app -->
    <TextView
        android:id="@+id/tv_unlock_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="@string/unlock_message"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/btn_biometric"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_app_title" />

    <!-- Botão para ativar autenticação biométrica -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_biometric"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/use_biometric"
        android:textColor="?attr/colorPrimary"
        app:backgroundTint="@android:color/white"
        app:icon="@drawable/ic_fingerprint"
        app:iconTint="?attr/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_unlock_message" />

</androidx.constraintlayout.widget.ConstraintLayout>
