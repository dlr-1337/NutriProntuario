<?xml version="1.0" encoding="utf-8"?>
<!-- Layout da tela de configurações do aplicativo -->
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Título da seção de segurança -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/security"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary" />

        <!-- Cartão com opções de segurança -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Opção para alterar o PIN de acesso -->
                <LinearLayout
                    android:id="@+id/layout_change_pin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/change_pin"
                        android:textSize="16sp" />

                </LinearLayout>

                <!-- Divisor entre opções -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider" />

                <!-- Opção para habilitar/desabilitar autenticação biométrica -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/enable_biometric"
                        android:textSize="16sp" />

                    <!-- Switch para ativar biometria -->
                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switch_biometric"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Título da seção de tema -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/theme"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary" />

        <!-- Cartão com opções de tema -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <!-- Grupo de opções de tema (claro, escuro, sistema) -->
            <RadioGroup
                android:id="@+id/rg_theme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <!-- Opção de tema claro -->
                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/rb_theme_light"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/theme_light" />

                <!-- Opção de tema escuro -->
                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/rb_theme_dark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/theme_dark" />

                <!-- Opção de tema padrão do sistema (selecionada por padrão) -->
                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/rb_theme_system"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/theme_system"
                    android:checked="true" />

            </RadioGroup>

        </com.google.android.material.card.MaterialCardView>

        <!-- Título da seção de conta -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/account"
            android:textColor="?attr/colorPrimary"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!-- Botão para fazer logout da conta -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_logout"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/logout" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
